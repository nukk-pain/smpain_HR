# Cloud Run Environment Configuration
NODE_ENV=production

# MongoDB Atlas Configuration (Cloud Run)
# ⚠️ SECURITY: Set via Google Cloud Secret Manager or environment variables
# MONGODB_URI should be provided via Cloud Run secrets
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Database Settings
DB_NAME=SM_nomu

# MongoDB Connection Pool Settings
MONGO_MAX_POOL=50
MONGO_MIN_POOL=5
MONGO_SRVSEL_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=30000

# Session Configuration (Legacy - to be removed after JWT migration)
# SESSION_SECRET=Set_via_Secret_Manager
# SESSION_NAME=hr_session
# SESSION_MAX_AGE=86400000

# JWT Configuration
# ⚠️ SECURITY: Set via Google Cloud Secret Manager
# JWT_SECRET=Set_via_Secret_Manager
JWT_EXPIRES_IN=24h

# Server Configuration (Cloud Run uses PORT env var)
PORT=8080

# CORS Settings (production frontend URL)
FRONTEND_URL=https://hr-frontend.vercel.app
ALLOWED_ORIGINS=https://hr-frontend.vercel.app,https://hr-frontend-git-main.vercel.app,https://hr-frontend-git-cloud.vercel.app

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Settings
BCRYPT_ROUNDS=10