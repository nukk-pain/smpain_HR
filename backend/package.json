{
  "name": "hr-backend",
  "version": "1.0.0",
  "description": "Node.js Express + MongoDB backend for HR system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest backend/tests/unit",
    "test:repositories": "jest backend/tests/repositories",
    "test:integration": "jest backend/tests/integration",
    "setup:performance": "node backend/scripts/setup-performance.js",
    "benchmark": "node backend/scripts/setup-performance.js --benchmark"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "mongodb": "^6.17.0",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "pdfkit": "^0.17.1",
    "puppeteer": "^24.12.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "xlsx": "^0.18.5",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "form-data": "^4.0.4",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/tests/**",
      "!backend/node_modules/**",
      "!backend/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "hr",
    "payroll"
  ],
  "author": "System Administrator",
  "license": "MIT",
  "type": "commonjs"
}
